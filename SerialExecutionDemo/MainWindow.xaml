<Window x:Class="SerialExecutionDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SerialExecutionDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Border BorderThickness="1" BorderBrush="LightGray" Background="Gray">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="85"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock x:Name="info">Happy</TextBlock>
                
                <TextBlock x:Name="netInfo" TextWrapping="Wrap" Grid.Row="1">IP</TextBlock>
            </Grid>
        </Border>
        
        <Button x:Name="button" Click="Button_OnClick" Height="30" Width="50">点我</Button>
    </Grid>
</Window>
